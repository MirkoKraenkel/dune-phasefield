# SOLVER CONFIGURATION
#---------------------

fem.ode.odesolver: EX  # ode solvers: EX, IM, IMEX
fem.ode.order: 4 
fem.ode.verbose: none # ode output: none, cfl, full
fem.ode.cflincrease: 1.
fem.ode.miniterations: 95
fem.ode.maxiterations: 1000
fem.ode.iterations: 50
fem.ode.solveriterations: 1000
fem.ode.solver.tolerance: 1e-9
fem.ode.cflStart: 1e-6
fem.ode.cflMax: 10
fem.timeprovider.factor: 0.9
fem.timeprovider.updatestep: 1
fixedTimeStep: 1e-5 #when 0 then use dynamic time step
fixedTimeStepEocLoopFactor: 2. # fixed time step is scaled with the inverse of this in each eoc loop

